---
import { getCollection } from "astro:content";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import PorfolioPreview from "../components/PorfolioPreview.astro";
import Contact from "../components/Contact.astro";

const projects = (await getCollection('projects')).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout 
    title="Mis Proyectos | Lombardi Matias"
    description="Conozca los proyectos más recientes de Lombardi Matias"
>
    <section class="stack gap-20">
        <article class="wrapper stack gap-8">
            <Hero
                title="Proyectos"
                tagline="Vea mis proyectos más recientes a continuación para hacerse una idea de mi experiencia anterior."
                align="start"
            />
            <Grid variant="offset">
                {
                    projects.map((project) => (
                        <li>
                            <PorfolioPreview project={project} />
                        </li>
                    ))
                }
            </Grid>
        </article>
        <Contact />
    </section>
</Layout>